ln -sf ld-2.3.6.so ./lib/ld-linux.so.2
ln -sf libdl-2.3.6.so ./lib/libdl.so.2
ln -sf libnss_dns-2.3.6.so ./lib/libnss_dns.so.2
ln -sf libc-2.3.6.so ./lib/libc.so.6

# libPThread
ln -sf libpthread-0.10.so ./lib/libpthread.so.0

# Other stuff
ln -sf /tmp ./var/tmp

ln -sf nc ./usr/bin/netcat
ln -sf /usr/share/terminfo/ ./usr/lib/terminfo
