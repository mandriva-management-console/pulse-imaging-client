ln -sf ../init.d/sendsigs ./etc/rc6.d/S20sendsigs
ln -sf ../init.d/sysklogd ./etc/rc6.d/K16sysklogd
ln -sf ../init.d/reboot ./etc/rc6.d/S99reboot
ln -sf ../init.d/urandom ./etc/rc6.d/S30urandom
ln -sf ../init.d/tz ./etc/rcS.d/S50tz
ln -sf ../init.d/dm ./etc/rcS.d/S60dm
ln -sf ../init.d/checkroot ./etc/rcS.d/S10checkroot
ln -sf ../init.d/bootmisc.sh ./etc/rcS.d/S55bootmisc
