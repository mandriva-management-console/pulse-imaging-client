ln -sf ../init.d/network ./etc/rc2.d/S40network
ln -sf ../init.d/revoboot ./etc/rc2.d/S99revoboot
ln -sf ../init.d/rmnologin ./etc/rc2.d/S16rmnologin
ln -sf ../init.d/netbase ./etc/rc2.d/S03netbase
ln -sf ../init.d/sysklogd ./etc/rc2.d/S00sysklogd
ln -sf ../init.d/umountfs ./etc/rc6.d/S40umountfs
